        alignItems: 'center',
    },
    register: {
        position: 'absolute',
        top: 30,
        right: 20,
    },
    loginTitle: {
        marginTop: 70,
    },
    loginInput: {
        width: '100%',
        alignItems: 'center',
    },
})


